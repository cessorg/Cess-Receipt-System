<% include ./partials/header.ejs %>
<div class="container">
        <div class="row mt-5" id="login">
            <div class="col-sm-2 col-md-3"></div>
            <div class="col-sm-8 col-md-6 mb-5 ">
                 <div class="card p-4 shadow-drk" style="background-color:#f1f1f1;border:none" >
                    <h2>Generate Reciept</h2>
                    <div class="card-body">
                        <form action="/reciept" method="POST">
                            <div class="form-group input-group">
                                    <div class="input-group-prepend bg-success text-white pl-3 pr-3 pt-2" style="font-size:20px"><i class="fa fa-user" ></i></div>
                                    <input type="text" name="leaderName" placeholder="Enter Team Leader Name" class="form-control" required/>
                            </div>
                            <div class="form-group input-group">
                                <div class="input-group-prepend bg-success text-white pl-3 pr-3 pt-2" style="font-size:20px"><i class="fa fa-envelope" ></i></div>
                                <input type="email" name="leaderEmail" placeholder="Enter Leader Email" class="form-control" required />
                            </div>
                            <div class="form-group input-group">
                                    <div class="input-group-prepend bg-success text-white pl-3 pr-3 pt-2" style="font-size:20px"><i class="fa fa-bullhorn" ></i></div>
                                    <select  name="event" class="selectpicker form-control  "  data-live-search="true" data-live-search-placeholder="Select Event" required>
                                            <%events.forEach(event=>{ %>
                                                <option  value="<%= event._id %>" > <%= event.eName %> </option>
                                            <% })%>
                                    </select>

                            </div>
                            <div class="form-group input-group">
                                    <div class="input-group-prepend bg-success text-white pl-3 pr-3 pt-2" style="font-size:20px"><i class="fa fa-user" ></i></div>
                                    <input type="number" name="eventFee" placeholder="Enter Fee Collected" class="form-control"  />
                            </div>
                            <div class="form-group input-group">
                                    <div class="input-group-prepend bg-success text-white pl-3 pr-3 pt-2" style="font-size:20px"><i class="fa fa-user" ></i></div>
                                    <input type="number" name="memberCount" placeholder="Enter No. of team Members" class="form-control" min="1" />
                            </div>
                            <div class="form-group input-group">
                                    <div class="input-group-prepend bg-success text-white pl-3 pr-3 pt-2" style="font-size:20px"><i class="fa fa-user" ></i></div>
                                    <input type="text" name="member2" placeholder="Enter Member1 Name" class="form-control" />
                            </div>
                            <div class="form-group input-group">
                                    <div class="input-group-prepend bg-success text-white pl-3 pr-3 pt-2" style="font-size:20px"><i class="fa fa-user" ></i></div>
                                    <input type="text" name="member3" placeholder="Enter Member2 Name" class="form-control" />
                            </div>
                            
                            
                            <button class="btn btn-outline-success"> Generate Reciept </button>
    
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-sm-2 col-md-3"></div>
           
    
           
            
        </div>
        </div>
        
    </body>
   
    </html>