<% include ./partials/header.ejs %>
<div class="container">
        <div class="row mt-5" id="login">
            <div class="col-sm-2 col-md-3"></div>
            <div class="col-sm-8 col-md-6 mb-5 ">
              <% if (data.isValid){ %>
                 <div class="card p-4 shadow-drk" style="background-color:#f1f1f1;border:none" >
                    <h2>Details</h2>
                    <div class="card-body">
                            <h3><%=data.event.eName%></h3>
                            <div class="form-group input-group">
                                    <div class="input-group-prepend bg-success text-white pl-3 pr-3 pt-2" style="font-size:20px"><i class="fa fa-user" ></i></div>
                                    <input type="text" value="<%=data.teamLeaderName%>" class="form-control" required readonly/>
                            </div>
                            <div class="form-group input-group">
                                <div class="input-group-prepend bg-success text-white pl-3 pr-3 pt-2" style="font-size:20px"><i class="fa fa-envelope" ></i></div>
                                <input type="email" value="<%=data.teamLeaderEmail%>" class="form-control" required readonly/>
                            </div>

                            <div class="form-group input-group">
                                    <div class="input-group-prepend bg-success text-white pl-3 pr-3 pt-2" style="font-size:20px"><i class="fa fa-user" ></i></div>
                                    <input type="number" value="<%=data.eventFee%>" class="form-control"  readonly/>
                            </div>
                            <div class="form-group input-group">
                                    <div class="input-group-prepend bg-success text-white pl-3 pr-3 pt-2" style="font-size:20px"><i class="fa fa-user" ></i></div>
                                    <input type="text" value="Team size: <%=data.teamMembers.length+1%>" class="form-control" min="1" readonly/>
                            </div>
                            <%if(data.teamMembers.length>0){%>
                            <div class="form-group input-group">
                                    <div class="input-group-prepend bg-success text-white pl-3 pr-3 pt-2" style="font-size:20px"><i class="fa fa-user" ></i></div>
                                    <input type="text" value="Team members<%=data.teamMembers.join()%>" class="form-control" readonly/>
                            </div>
                            <%}%>

                            <a class="btn btn-outline-success" href="/lock-user/<%=data._id%>"> Allow </a>
                        </div>
                </div>
                <%}else{%>
                  <div class="text-danger">
                      <h1>No Record Found</h1>
                  </div>
                <%}%>
            </div>
            <div class="col-sm-2 col-md-3"></div>




        </div>
        </div>

    </body>

    </html>
