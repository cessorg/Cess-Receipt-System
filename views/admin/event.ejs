<% include ../partials/header %>
    <div class="container py-5">
    <div class="row">
        <div class="col-lg-12 mx-auto mb-5  text-center">
            <h1 class="display-4">Events Page</h1>

        </div>
        <div class="col-sm-8 col-md-6 " style="margin-left:50%; transform:translateX(-50%)">
            <div class="card p-4 shadow-drk" style="background-color:#f1f1f1;border:none" >
               <h2>Create Event</h2>
               <div class="card-body">
                   <form action="/admin/event" method="POST">
                       <div class="form-group input-group">
                           <div class="input-group-prepend bg-success text-white pl-3 pr-3 pt-2" style="font-size:20px"><i class="fa fa-envelope" ></i></div>
                           <input type="text" name="name" placeholder="Enter Event Name" class="form-control" />
                       </div>
                       <div class="form-group input-group">
                           <div class="input-group-prepend bg-success text-white pl-3 pr-3 pt-2" style="font-size:20px"><i class="fa fa-calendar" ></i></div>
                           <input type="date" name="date" placeholder="Select date" class="form-control" />
                       </div>
                       <button class="btn btn-outline-success"> Create Event </button>

                   </form>
               </div>
           </div>
       </div>
       <br/>
       <br/>
       <div class="col-sm-8 col-md-6 " style="margin-left:50%; transform:translateX(-50%)">
           <div class="card p-4 shadow-drk" style="background-color:#f1f1f1;border:none" >
              <h2>Delete Event</h2>
              <div class="card-body">
                  <form action="/admin/event_delete" method="POST">
                    <div class="form-group input-group">
                            <div class="input-group-prepend bg-success text-white pl-3 pr-3 pt-2" style="font-size:20px"><i class="fa fa-bullhorn" ></i></div>
                            <select  name="event" class="selectpicker form-control  "  data-live-search="true" data-live-search-placeholder="Select Event" required>
                                    <%allEvents.forEach(event=>{ %>
                                        <option  value="<%= event._id %>" > <%= event.eName %> </option>
                                    <% })%>
                            </select>
                    </div>
                    <div class="form-group input-group">
                        <div class="input-group-prepend bg-success text-white pl-3 pr-3 pt-2" style="font-size:20px"><i class="fa fa-envelope" ></i></div>
                        <input type="text" name="secret" placeholder="Enter Secret Code" class="form-control" />
                    </div>
                      <button class="btn btn-outline-danger"> Delete Event </button>
                  </form>
              </div>
          </div>
      </div>

    </div>
    </div>
</body>
</html>
